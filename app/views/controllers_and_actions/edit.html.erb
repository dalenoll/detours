<h1>New Controllers and Actions</h1>

<% form_for(@controllers_and_action) do |f| %>
  <%= f.error_messages %>
  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :controller %></td>
      <td><%= f.text_field :controller %></td>
    </tr>
    <tr>
      <td><%= f.label :action %></td>
      <td><%= f.text_field :action %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= f.submit "Update" %></td>
    </tr>
  </table>
<% end %>

<div id='lower-navigation'>
<h2>
<%= link_to 'Back to List', controllers_and_actions_path %>
</h2>
</div>
