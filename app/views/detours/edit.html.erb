<h1>Edit Detour</h1>

<% form_for(@detour) do |f| %>
  <%= f.error_messages %>

  <table>
    <tr>
      <td><%= f.label(:detour_type, 'Type') %></td>
      <td><%= f.select(:detour_type, [ 
		[ 'Unplanned - No Sch Change', 1 ],
		[ 'Planned - Sch Change', 2 ],
		[ 'Unplanned - Sch Change', 3 ],
		[ 'Planned - No Sch Change', 4 ]
		 ]) %></td>
      <td><%= f.label :reason %></td>
      <td><%= f.text_field(:reason, :size => 20) %></td>
    </tr>
    <tr>
      <td><%= f.label(:start_date, 'Start') %></td>
      <td><%= f.date_select(:start_date, :order => [:day, :month, :year]) %></td>
      <td><%= f.label(:start_time, 'Time') %></td>
      <td><%= f.text_field(:start_time ) %></td>
    <tr>
    <tr>
      <td><%= f.label(:end_date, 'End') %></td>
      <td><%= f.date_select(:end_date, :order => [:day, :month, :year, :hour, :minute], :include_blank => true, :default => 0) %></td>
      <td><%= f.label(:end_time, 'Time') %></td>
      <td><%= f.text_field(:end_time ) %></td>
    </tr>
    <tr>
      <td><%= f.label :route %></td>
      <td><%= f.text_field(:route, :size => 20 ) %></td>
      <td><%= f.label :direction %></td>
      <td><%= f.select( :direction, [
		[ 'Northbound', 0 ],
		[ 'Southbound', 1 ],
		[ 'Eastbound', 2 ],
		[ 'Westbound', 3 ],
		[ 'Both', 4 ],
		[ 'All', 5 ]
		]) %></td>
    </tr>
    <tr>
      <td valign="top"><%= f.label :description %></td>
      <td colspan="3"><%= f.text_area(:description, :cols => 57, :rows => 6) %></td>
    </tr>
    <tr>
      <td><%= f.label :supervisor %></td>
      <td><%= f.text_field(:supervisor, :size => 20) %></td>
      <td><%= f.label :dispatcher %></td>
      <td><%= f.text_field(:dispatcher, :size => 20) %></td>
    </tr>
    <tr>
      <td><%= f.label :bulletin_number %></td>
      <td><%= f.text_field(:bulletin_number, :size => 20) %></td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
    <tr><td> 
    <%= f.submit "Update" %>
    </td>
    <td colspan='3'>
  <p class='note'>Clicking update will generate an updated detour document at create new notifications based upon the original notification settings when the detour was created. In other words, unless you changed something, don't use the update button, use the browser's BACK button to return to the list.</p>
    </td>
  </table>
  <hr>
  <div id='show-detour'>

    <table>
	<tr>
	<th>Created</th>
	<th><%= create_pdf_url %></th>
	</tr>
   <% if (if_accessible('detours', 'show_detail')) %>
	<tr>
		<td><%= f.label :created_at %></td>
		<td><%= f.text_field(:created_at, :size => 20, :disabled => 'disabled') %></td>
	</tr>
	<tr>
		<td><%= f.label :create_addr %></td>
		<td><%= f.text_field(:create_addr, :size => 20, :disabled => 'disabled') %></td>
	</tr>
	<tr>
		<td><%= f.label :create_pdf_path %></td>
		<td><%= f.text_field(:create_pdf_path, :size => 20, :disabled => 'disabled') %></td>
	</tr>
  <% end %>
	<tr>
		<th>Changed</th>
		<th><%= change_pdf_url %></th>
	</tr>
   <% if (if_accessible('detours', 'show_detail')) %>
	<tr>
		<td><%= f.label :change_at %></td>
		<td><%= f.text_field(:change_at, :size => 20, :disabled => 'disabled') %></td>
	</tr>
	<tr>
		<td><%= f.label :change_addr %></td>
		<td><%= f.text_field(:change_addr, :size => 20, :disabled => 'disabled') %></td>
	</tr>
	<tr>
		<td><%= f.label :change_pdf_path %></td>
		<td><%= f.text_field(:change_pdf_path, :size => 20, :disabled => 'disabled') %></td>
	</tr>
  <% end %>
	<tr>
		<th>Canceled</th>
		<th><%= cancel_pdf_url %></th>
	</tr>
   <% if (if_accessible('detours', 'show_detail')) %>
	<tr>
		<td><%= f.label :cancel_date %></td>
		<td><%= f.text_field(:cancel_date_formated, :size => 20, :disabled => 'disabled') %></td>
	</tr>
	<tr>
		<td><%= f.label :cancel_addr %></td>
		<td><%= f.text_field(:cancel_addr, :size => 20, :disabled => 'disabled') %></td>
	</tr>
	<tr>
		<td><%= f.label :cancel_pdf_path %></td>
		<td><%= f.text_field(:cancel_pdf_path, :size => 20, :disabled => 'disabled') %></td>
	</tr>
  <% end %>
    </table>
</div>
<% end %>
<div id='lower-navigation'>
<h2><%= link_to 'Back to List', detours_path %></h2>
</div>
